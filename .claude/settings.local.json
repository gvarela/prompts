{
  "permissions": {
    "allow": [
      "Bash(chmod:*)",
      "Bash(./scripts/lint:*)",
      "Bash(./scripts/lint-hook:*)",
      "WebFetch(domain:ampcode.com)"
    ],
    "deny": [],
    "ask": []
  },
  "hooks": {
    "PostToolUse": [
      {
        "matcher": "Write",
        "hooks": [
          {
            "type": "command",
            "command": "./scripts/lint-hook",
            "timeout": 5
          }
        ]
      },
      {
        "matcher": "Edit",
        "hooks": [
          {
            "type": "command",
            "command": "./scripts/lint-hook",
            "timeout": 5
          }
        ]
      }
    ]
  }
}
