{
  "permissions": {
    "allow": [
      "Bash(chmod:*)",
      "Bash(./scripts/lint:*)",
      "Bash(./scripts/lint-hook:*)",
      "WebFetch(domain:ampcode.com)",
      "Bash(./scripts/install-commands:*)",
      "Bash(grep:*)",
      "Bash(awk:*)",
      "Bash(git:*)",
      "Bash(bd:*)",
      "WebSearch",
      "WebFetch(domain:github.com)",
      "Bash(wc:*)"
    ],
    "deny": [],
    "ask": []
  },
  "hooks": {
    "SessionStart": [
      {
        "hooks": [
          {
            "type": "command",
            "command": "./.claude/hooks/setup-beads-mode.sh",
            "timeout": 5
          }
        ]
      }
    ],
    "PostToolUse": [
      {
        "matcher": "Write",
        "hooks": [
          {
            "type": "command",
            "command": "./scripts/lint-hook",
            "timeout": 5
          }
        ]
      },
      {
        "matcher": "Edit",
        "hooks": [
          {
            "type": "command",
            "command": "./scripts/lint-hook",
            "timeout": 5
          }
        ]
      }
    ]
  }
}
